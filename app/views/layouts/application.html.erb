<!DOCTYPE html>
<html>
<head>
  <title>My Fotoz</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body class="main-background">
      <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container-fluid">
          <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="brand" href="#" id="logo"><%=image_tag("my_photoz2.png")%></a>
          <div class="nav-collapse collapse">
          <%if user_signed_in?%>
            <p class="navbar-text pull-right">
              Logged in as <%=current_user.email%>&nbsp;|&nbsp;&nbsp;<%=link_to"Signout",destroy_user_session_path%>
            </p>
            <ul class="nav">
              <li class="active"><%=link_to "Home",root_path%></li>
              <li><%=link_to "Gallery",albums_path%></li>
              <li><%#=link_to "Photos",photos_path%></li>
              <li><%=link_to "Friends",friends_path%></li>
            </ul>
            <form class="navbar-search pull-right" style="margin-right:20px;">
              <input type="text" class="search-query" placeholder="Search">
            </form>
            <%end%>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>
    <div class="container-fluid">
      <%= yield %>
    </div>

</body>
</html>


 



    


