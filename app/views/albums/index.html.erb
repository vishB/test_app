<script>!window.jQuery && document.write(unescape('%3Cscript src="js/minified/jquery-1.9.1.min.js"%3E%3C/script%3E'))</script>
	<!-- custom scrollbars plugin -->

	<script>
		(function($){
			$(window).load(function(){
				$("#album-scroll").mCustomScrollbar({
					scrollButtons:{
						enable:true
					}
				});
			});
		})(jQuery);
	</script>

  <div class="row">
    
      <div class="bs-docs-sidebar">
        <ul class="nav nav-list bs-docs-sidenav affix">
          <li class="active album-thumb">
            <a href="#albums">
              <i class="icon-chevron-right"></i>
                Albums
            </a>
          </li>
          <%@albums.each do |album|%>
            <li>
              <div class = "album-thumb">
                <div class ="album-content">
                  <%=link_to (image_tag("photo_album.png",:class=>"logo")),albums_path(:album_id => album),:class=>"album-link"%>
                  <p>
                  <%=link_to "#{album.name}", albums_path(:album_id => album),:class=>"album-link"%><br/>
                  <%=album.photos.count%> photos  
                  </p>
                  <div class="tools">
                    <%= link_to (image_tag("zip2.png",:class=>"zip",:title=>"download it")),zip_path(album)%>
                    <%= link_to (image_tag("cool_icons/edit.png",:title=>"edit")), edit_album_path(album) %>
                    <%= link_to (image_tag("cool_icons/delete.png",:title=>"delete")), album, method: :delete, data: { confirm: 'Are you sure?' } %>
                  </div>
                </div>
              </div>
            </li>
          <%end%>

        </ul>
      </div>
      
    <div class="pull-right gallery-background">
      <div class="bs-docs-example bs-docs-example-submenus span12">
        <%=render :partial=>'photos/photo_list'%> 
      </div>         
    </div>
  </div>
      
    
  
    
  <%=render :partial=>"new_album"%>

    

